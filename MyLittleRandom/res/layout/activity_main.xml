<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_from"
        android:textSize="@dimen/abc_text_size_title_material" />

    <Button
        android:id="@+id/bt_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_interval" />

    <Button
        android:id="@+id/bt_manualList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_manualList" />

    <Button
        android:id="@+id/bt_txtFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_textFile" />

</LinearLayout>
